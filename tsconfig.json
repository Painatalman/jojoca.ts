{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["es6", "DOM"],                                     
    "module": "umd",                               
    "rootDir": "src",         
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true                                 
  }
}
